{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "downlevelIteration": true,
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "module": "esnext",
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "es2015",
    "types": [ "node" ],
    "typeRoots": [
      "node_modules/@types/node"
    ],
    "lib": [
      "es2018",
      "dom"
    ],
    "paths": {
      "asorm": [
        "dist/asorm",
        "dist/asorm"
      ],
      "asorm/*": [
        "dist/asorm/*",
        "dist/asorm/*"
      ]
    }
  },
  "angularCompilerOptions": {
    "fullTemplateTypeCheck": true,
    "strictInjectionParameters": true
  }
}
